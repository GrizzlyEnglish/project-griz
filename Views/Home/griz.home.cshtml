        <script>

            var yBar;

            document.addEventListener("DOMContentLoaded", function() {
                yBar = window.innerHeight/2;
            });

            function checkSection(elem){
                var scroll = elem.scrollTop;
                var sections = document.getElementsByTagName('section');
                for(var i = 0; i < sections.length; i++){
                    var rect = sections[i].getBoundingClientRect();
                    if(rect.top < yBar) {
                        console.log(sections[i].childNodes)
                        for (var i2 = 0; i2 < sections[i].childNodes.length; i2++) {
                            if (sections[i].childNodes[i2].className == "left-line") {
                                sections[i].classList.add('hover');
                                break;
                            }
                        }
                    }
                }
            }

            function outputRects(){
                var arr = document.getElementsByTagName('section');
                for(var i = 0; i < arr.length; i++){
                    var rect = arr[i].getBoundingClientRect();
                    console.log(rect);
                }
            }
        
        </script>

